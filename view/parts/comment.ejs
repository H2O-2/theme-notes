<div class="load-disqus" onclick="loadDisqus()">
    <h3 class="load-op">
        加载 Disqus 评论&nbsp;
    </h3>
    <i class="fa fa-angle-double-down"></i>
    <p class="load-annotation">*Disqus&nbsp;在墙内无法访问</p>
</div>
<div id="disqus_thread"></div>
<script>
    var disqus_config = function () {
        this.page.url = page.canonical;
        this.page.identifier = page.fileName;
    };

    function loadDisqus () {
        var d = document, s = d.createElement('script');

        s.src = `https://<%= site.disqusShortname %>.disqus.com/embed.js`;

        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);

        document.getElementsByClassName('load-disqus').item(0).style.display = 'none';
        document.getElementById('disqus_thread').style.display = 'block';
    };
</script>
<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
